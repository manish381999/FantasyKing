<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="@dimen/dp_5_dsa"
    android:elevation="@dimen/dp_5_dsa"
    android:layout_margin="@dimen/dp_8_dsa"
    app:cardCornerRadius="@dimen/dp_10_dsa"
    android:background="@drawable/bag_cardview">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/match_name"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center_horizontal"
                android:text="Match Name"
                android:textColor="@color/peach_orange"
                android:textSize="@dimen/sp_18_dsa"
             />

            <TextView
                android:id="@+id/matchType"
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center_horizontal"
                android:text="Series Name"
                android:textColor="@color/peach_orange"
                android:textSize="@dimen/sp_18_dsa"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/tv_s"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10_dsa"
                android:layout_marginTop="@dimen/dp_10_dsa"
                android:text="Status:"
                android:textColor="@color/secondary_textColor"
                android:textSize="@dimen/sp_16_dsa"
                />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="0dp"
                android:layout_weight="1.7"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10_dsa"
                android:layout_marginTop="@dimen/dp_10_dsa"
                android:textColor="@color/secondary_textColor"
                android:textSize="@dimen/sp_16_dsa"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/tv_v"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10_dsa"
                android:layout_marginTop="@dimen/dp_10_dsa"
                android:text="Venue:"
                android:textColor="@color/secondary_textColor"
                android:textSize="@dimen/sp_16_dsa"
                />

            <TextView
                android:id="@+id/tv_venue"
                android:layout_width="0dp"
                android:layout_weight="1.7"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10_dsa"
                android:layout_marginTop="@dimen/dp_10_dsa"
                android:textColor="@color/secondary_textColor"
                android:textSize="@dimen/sp_16_dsa"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/tv_d"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10_dsa"
                android:layout_marginTop="@dimen/dp_10_dsa"
                android:text="Date:"
                android:textColor="@color/secondary_textColor"
                android:textSize="@dimen/sp_16_dsa"
                />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="0dp"
                android:layout_weight="1.7"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10_dsa"
                android:layout_marginTop="@dimen/dp_10_dsa"
                android:textColor="@color/secondary_textColor"
                android:textSize="@dimen/sp_16_dsa"
                />
        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>